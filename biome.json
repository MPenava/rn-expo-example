{
	"$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
	"files": {
       "ignoreUnknown": false,
       "includes": [
           "**"
       ]
   },
   "formatter": {
       "enabled": true,
       "indentStyle": "tab"
   },
   "linter": {
       "enabled": true,
       "rules": {
           "recommended": true,
           "correctness": {
               "noUnusedImports": { "level": "warn", "fix": "unsafe", "options": {} },
               "noUnusedVariables": "warn",
               "useExhaustiveDependencies": "off"
           },
           "style": {
               "useConsistentArrayType": "warn",
               "useFragmentSyntax": "warn"
           },
           "complexity": {
               "noCommaOperator": "off"
           }
       }
   }
}
